                    stage('Paralell 2'){
                        steps{
                            echo 'Stage 2 - Paralell 2'

                        }

                    }
                }
            }
        stage('Workspace teardown'){
            steps {
                cleanWs()
                echo 'Workspace is cleaned'
            }
        }
        }
    }